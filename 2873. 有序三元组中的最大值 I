class Solution {
public:
    long long maximumTripletValue(vector<int>& nums) {
        long long sizel = nums.size();
        long long ans = -999999;
        for(long long i = 0;i < sizel;i++){
            long long a = nums[i];
            for(long long j = i + 1;j < sizel;j++){
                long long b = nums[j];
                for(long long k = j + 1;k < sizel;k++){
                    long long c = nums[k];
                    if((a - b) * c > ans) ans = (a-b)*c;
                }
            }
        }
        if(ans < 0) ans = 0;
        return ans;
    }
};
